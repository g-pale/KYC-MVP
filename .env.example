# Database
DATABASE_URL=postgresql://user:password@localhost:5432/kyc_db
# или для SQLite (разработка):
# DATABASE_URL=sqlite:///./kyc.db

# Redis
REDIS_URL=redis://localhost:6379/0

# Azure Face API
AZURE_FACE_ENDPOINT=https://your-region.api.cognitive.microsoft.com
AZURE_FACE_KEY=your_azure_face_api_key

# Azure Blob Storage
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...
AZURE_STORAGE_CONTAINER=kyc-temp

# Security
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# Sentry (опционально)
SENTRY_DSN=

